		#actionStepper = #actionStepper + 1
	endif
	
	if #minutes >= #stopLevelSkillMins and #justUnlockSkills == 0
		#actionStepper = #actionStepper + 1
	endif
	
	//level only top hero at this time
	if #minutes >= 100
		goto :levelHeroesPressLevelUp
	endif
	
	//lvl up only nearby heroes at this time onwards
	//edit as you see fit
