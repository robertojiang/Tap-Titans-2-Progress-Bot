		sleep 200
		touchMove 1 280 710
		sleep 50
		touchMove 1 280 500
		sleep 50
		touchMove 1 280 410
		sleep 50
		touchMove 1 280 400
		touchUp 1

		sleep 300
		#time = #time + 650
		
		goto :levelHeroesPressLevelUp
	endif
	
goto :levelHeroesScrollDown

